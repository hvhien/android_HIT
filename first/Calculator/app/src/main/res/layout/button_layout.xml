<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:columnCount="6"
        android:rowCount="5">


        <Button
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/am"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="+/-"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/phantram"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="%"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/chia"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="40dp" />


        <Button
            android:id="@+id/bnt7"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/bnt8"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/bnt9"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/nhan"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="*"
            android:textColor="@color/white"
            android:textSize="40dp" />


        <Button
            android:id="@+id/bnt4"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/bnt5"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/bnt6"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/tru"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="40dp" />


        <Button
            android:id="@+id/bnt1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/bnt2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/bnt3"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/cong"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="40dp" />


        <Button
            android:id="@+id/bnt0"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/phay"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/xanh"
            android:text=","
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/bang"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="#AC101D"
            android:text="="
            android:textColor="@color/white"
            android:textSize="40dp" />
    </GridLayout>

</RelativeLayout>